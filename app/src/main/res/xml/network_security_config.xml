<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext traffic for WebSocket over Tailscale.
         Tailscale provides encryption, so ws:// is acceptable. -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- If you use wss:// with a custom certificate, add domain config here -->
</network-security-config>
